<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href='https://fonts.googleapis.com/css?family=Montserrat' rel='stylesheet'>
    <link href='https://fonts.googleapis.com/css?family=Roboto' rel='stylesheet'>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.4/css/bulma.min.css">
    <link type="text/css" rel="stylesheet" href="~/css/site.css" />
    <script src="https://canvasjs.com/assets/script/canvasjs.min.js"></script>
    <title>Projeto Lupa NH</title>
</head>
<body>
    
    <script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAiDCTCM55kP4mIJpEtrTuH8TP_ZSJ4ONQ"></script>

    @RenderSection("Scripts", required: false)

    @{
        if (! Model.IsFrameView)
        {
            <div class="hr"></div>
            <nav class="navbar is-info" role="navigation" aria-label="main navigation">
                <div class="navbar-brand">
            <span class="navbar-item">
                <img src="~/images/logo-lupa-nh-b.webp">
            </span>
            <a class="navbar-item space" href="/site/home">
                Mapa
            </a>
            @*<a class="navbar-item space" href="/site/survey">
                De Sua Opinião
            </a>*@
            <a class="navbar-item space" href="http://lupa.tecccog.net" target="_blank">
                Nosso Site
            </a>
        </div>
        <div class="navbar-menu">
            <div class="navbar-start">
                <span class="navbar-item">
                    <img src="~/images/logo-lupa-nh-b.webp">
                </span>
                <a class="navbar-item space" href="/site/home">
                    Mapa
                @*</a>
                <a class="navbar-item space" href="/site/survey">
                    De Sua Opinião
                </a>*@
                <a class="navbar-item space" href="http://lupa.tecccog.net" target="_blank">
                    Nosso Site
                </a>
            </div>
        </div>
    </nav>
        }
    }

    <div class="body" id="body">
        @RenderBody()
    </div>

    @{
        if (! Model.IsFrameView)
        {
            <footer class="footer">
                <div class="content has-text-centered">
                    <p>
                        PROJETO LUPA NH - Grupo TECCCOG
                    </p>
                </div>
            </footer>
        }
    }

    <script type="text/javascript" src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>
